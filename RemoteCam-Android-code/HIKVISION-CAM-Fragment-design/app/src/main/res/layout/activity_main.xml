<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".remote.activity.MainActivity"
    android:background="@drawable/appbackground3">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:paddingTop="10dp"
         android:paddingBottom="10dp"
         android:background="#FFFFFF"
         android:id="@+id/title_layout">

         <Button
             android:layout_width="20dp"
             android:layout_height="25dp"
             android:background="@drawable/backarrowbtn"
             android:id="@+id/button"
             android:layout_marginLeft="17dp"/>



        <com.test.sqisoft.remote.view.TitleView
            android:id="@+id/remotecamera_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="셀카촬영"
            android:textSize="20dp"
            android:textColor="#212121"
            android:background="#FFFFFF"
            android:layout_marginLeft="12dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button"
            android:layout_toEndOf="@+id/button" />

         <Button
             android:layout_width="30dp"
             android:layout_height="28dp"
             android:id="@+id/photo_gallery_Btn"
             android:background="@drawable/person"
             android:layout_alignParentTop="true"
             android:layout_alignParentRight="true"
             android:layout_alignParentEnd="true"
             android:layout_marginRight="10dp"/>

     </RelativeLayout>



        <FrameLayout
            android:id="@+id/replacedLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/title_layout">
        </FrameLayout>






</RelativeLayout>
