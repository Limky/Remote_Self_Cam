<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".remote.fragment.FragmentCamera"
    android:fillViewport="true" >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/user_select_layout"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="다시찍기"
                android:textColor="#ffffff"
                android:background="@drawable/button"
                android:id="@+id/cancel_btn"
                android:layout_marginRight="35dp"/>

            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="저장하기"
                android:background="@drawable/button"
                android:id="@+id/save_image_btn"/>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/widget_play"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:id="@+id/capture_imageview"
                android:background="@drawable/loading_back"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
            />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffff"
                android:id="@+id/image_title"
                android:layout_alignBottom="@+id/capture_imageview"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="15dp"
                android:visibility="gone"/>

        </RelativeLayout>

        <ImageView
            android:src="@drawable/circle"
            android:layout_width="80dp"
            android:layout_height="85dp"
            android:id="@+id/animation_circle_loading"
            android:layout_marginTop="54dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="3"
            android:textSize="35dp"
            android:id="@+id/timer"
            android:layout_marginBottom="94dp"
            android:layout_alignBottom="@+id/sur_player"
            android:layout_centerHorizontal="true"
            android:textColor="#ECEFF1"
            android:visibility="gone"
            />


        <TextView
            android:paddingBottom="8dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textColor="#212121"
            android:text="00 : 29"
            android:background="@drawable/timer"
            android:id="@+id/limit_time_textview"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:gravity=""/>


        <TextView
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="21dp"
            android:textColor="#212121"
            android:text="  촬영 중입니다.... "
            android:id="@+id/ing_textview"
            android:layout_below="@+id/limit_time_textview"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:visibility="gone"/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginBottom="25dp"
            android:id="@+id/camera_action_btn"
            android:background="@drawable/capture_btn"
            android:layout_above="@+id/info_textview"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#212121"
            android:text="라이브 뷰화면을 확인해주세요.\n촬영버튼을 누르고 3초 뒤 촬영됩니다. "
            android:id="@+id/info_textview"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"/>

        <SurfaceView
            android:id="@+id/sur_player"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:background="#0000ff00"
            android:layout_above="@+id/limit_time_textview"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>



</RelativeLayout>
