<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sqisoft.remote.fragment.FragmentUserConfirm">

    <!-- TODO: Update blank fragment layout -->
 <LinearLayout
     android:layout_marginRight="10dp"
     android:layout_marginLeft="10dp"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_gravity="center"
     android:background="@drawable/user_confirm_layout">

     <ImageView
         android:layout_marginTop="-7dp"
         android:layout_width="wrap_content"
         android:layout_height="192dp"
         android:id="@+id/catching_img"
         android:layout_marginBottom="12dp"
     />

     <TextView
         android:id="@+id/textView2"
         android:layout_marginLeft="10dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:padding="5dp"
         android:text="오죽헌 입구"
         android:textStyle="bold"
         android:textSize="17sp"
         android:textColor="#000000"/>

     <TextView
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:id="@+id/text1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="4dp"
         android:text="2016.07.12"
         android:textStyle="bold"
         android:textSize="13sp"
         android:textColor="#757575"
         android:layout_marginBottom="12dp" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:id="@+id/CameraSave"
         android:background="@drawable/user_confirm_button_layout"
         android:paddingTop="1dp">

         <Button
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:text="취소"
             android:id="@+id/cancel_remote_btn"
             android:background="@drawable/user_confirm_left_button"
             android:textColor="#ea3986"
             android:textSize="18dp"
             android:layout_marginRight="1dp"/>

         <Button
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:text="공개하기"
             android:id="@+id/save_remote_image_btn"
             android:background="@drawable/user_confirm_right_button"
             android:textColor="#ea3986"
             android:textSize="18dp"/>
     </LinearLayout>


 </LinearLayout>



</FrameLayout>
